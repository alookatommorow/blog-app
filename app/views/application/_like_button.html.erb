<% if logged_in? %>

  <% if like.present? %>
    <%= form_for like, method: :delete, html: {class: "like-form"}, data: { ajax_button: true, ajax_update: ".likes-container" } do |f| %>
      <%= f.hidden_field :likeable_id, value: movie.id %>
      <%= f.hidden_field :likeable_type, value: movie.class.name %>
      <%= button_tag(type: 'submit') do %>
          <%= fa_icon "thumbs-o-down"  %> Unlike
      <% end %>

    <% end %>
  <% else %>
    <%= form_for :like, url: likes_path, html: {class: "like-form"}, data: { ajax_button: true, ajax_update: ".likes-container" } do |f| %>
      <%= f.hidden_field :likeable_id, value: movie.id %>
      <%= f.hidden_field :likeable_type, value: movie.class.name %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= button_tag(type: 'submit') do %>
          <%= fa_icon "thumbs-o-up"  %> Like
      <% end %>
    <% end %>
  <% end %>
<% end %>